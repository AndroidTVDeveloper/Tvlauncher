<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yang.tvlauncher.MainActivity"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">

    <fragment
        android:id="@+id/main_browse_fragment"
        android:name="com.yang.tvlauncher.MainFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/main_time_ll"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="top|right"
        android:layout_margin="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_time_tv"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:background="#00ffffff"
            android:textColor="#ffffff"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/main_date_tv"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/main_time_tv"
            android:background="#00ffffff"
            android:lines="2"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </RelativeLayout>


</FrameLayout>